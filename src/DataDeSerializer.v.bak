module DataDeSerializer(
    input clk8,
    input clk320,
    input Rx,
    output [39:0] Data
    );

reg [39:0] Databuf;

always @(posedge clk320)
begin
    Databuf[39:0]<={Databuf[38:0],Rx};
end    
reg [39:0] DataR;
always @(posedge clk8)
begin
    DataR<=Databuf;
end

assign Data=DataR;

endmodule
